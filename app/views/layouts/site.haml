!!! 5
%html
  %head
    %meta(http-equiv="Content-type" content="text/html; charset=utf-8")
    %title
      = yield :title
      Полит-грамота
    = stylesheet_link_tag 'site'
    = auto_discovery_link_tag :rss, "http://feeds.feedburner.com/polit-gramota/feed"
    = javascript_include_tag "jquery.js"
    %meta(name='yandex-verification' content='527c8b38e444d104')
    %link(rel="shortcut icon" href="/images/favicon.ico")
    :javascript
      $(function(){
        $(".article.preview").each(function(){
          var href =$(this).find(".title a").attr("href");
          $(this).find(".lead img").wrap('<a href="' + href + '"/>');
          });
        });

  %body
    #container
      #footer-wrapper
        = render :partial => 'header'
        %table#content
          - case params[:action]
            - when 'main'
              %td.main
                = yield
            - else
              %td.mainbar
                = yield
              %td.sidebar
                = render_grid('sidebar', 0.9..1)
                = yield :sidebar
        #footer-push
      #footer
        .footer-border
        = render :partial => 'footer'



