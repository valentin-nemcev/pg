<h1>Статьи</h1>

<table>
  <tr>
    <th>Рубрика</th>
    <th>Заголовок</th>
    <th>Подзаголовок</th>
    <th>Ссылка</th>
  </tr>

<% for article in @articles %>
  <tr>
    <td><%=h article.category.title unless article.category.nil? %></td>
    <td><%=h article.title %></td>
    <td><%=h article.subtitle %></td>
    <td><%=h article.link %></td>
    <td><%= link_to 'Редактировать', edit_admin_article_path(article) %></td>
    <td>
			<%= link_to 'Удалить', admin_article_path(article), :confirm => 'Действительно удалить?', :method => :delete %>
		</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Новая статья', new_admin_article_path %>
