<h1>Listing articles</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Link</th>
  </tr>

<% for article in @articles %>
  <tr>
    <td><%=h article.category %></td>
    <td><%=h article.title %></td>
    <td><%=h article.subtitle %></td>
    <td><%=h article.link %></td>
    <td><%= link_to 'Show', admin_article_path(article) %></td>
    <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
    <td><%= link_to 'Destroy', admin_article_path(article), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New article', new_admin_article_path %>
