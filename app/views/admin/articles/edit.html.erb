<h1>Editing article</h1>

<% form_for [:admin, @article] do |f| %>
  <%= f.error_messages %>
	<%= @form_method %>
  <p>
    <%= f.label :category %><br />
    <%= collection_select(:article, :category_id, Category.all, :id, :title) %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :subtitle %><br />
    <%= f.text_field :subtitle %>
  </p>
  <p>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>


<%= link_to 'Back', admin_articles_path %>
<% content_for :head_title do %>
	<%= @article.title %>
<% end %>
