<h1>Редактирование статьи</h1>

<% form_for [:admin, @article] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :category_id %><br />
    <%= collection_select(:article, :category_id, Category.all, :id, :title, :include_blank => ('Нет рубрики')) %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :subtitle %><br />
    <%= f.text_field :subtitle %>
  </p>
  <p>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </p>
  <p>
  	<%= f.label :text %><br />
	  <%= textile_editor :article, :lead, :rows => 8 -%>
  </p>
	<p>
    <%= f.label :text %><br />
    <%= textile_editor :article, :text -%>
  </p>
  <p>
    <%= f.submit "Сохранить" %>
		<%= textile_editor_initialize -%>
  </p>
<% end %>


<%= link_to 'Назад', admin_articles_path, :class => 'back' %>
<% content_for :head_title do %>
	<%= @article.title %>
<% end %>
