<h1>Редактирование статьи</h1>

<% form_for [:admin, @article] do |f| %>
  <%= f.error_messages %>
	<%= @form_method %>
  <p>
    <%= f.label :category, 'Рубрика' %><br />
    <%= collection_select(:article, :category_id, Category.all, :id, :title, :include_blank => ('Нет рубрики')) %>
  </p>
  <p>
    <%= f.label :title, 'Заголовок' %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :subtitle, 'Подзаголовок' %><br />
    <%= f.text_field :subtitle %>
  </p>
  <p>
    <%= f.label :link, 'Ссылка' %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.label :text, 'Текст' %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit "Сохранить" %>
  </p>
<% end %>


<%= link_to 'Назад', admin_articles_path %>
<% content_for :head_title do %>
	<%= @article.title %>
<% end %>
