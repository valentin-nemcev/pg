<h1>Администраторы</h1>

<ul>
	<% for user in @users %>
	  <li>
   		<%= user.name %> <%= '(Администратор)' if user.is_admin? %>
			<% if not user.bug_counter.nil? %>
				(Найдено ошибок: <%= number_with_precision(user.bug_counter, :precision => 0)  %>)
			<% end %>
			<% if current_user.is_admin? -%>
				<%= link_to '+1', increment_bug_counter_admin_user_path(user) %>
				<%= link_to 'Редактировать', edit_admin_user_path(user) %>
				<%= link_to 'Удалить', admin_user_path(user), :confirm => 'Действительно удалить?', :method => :delete %>
			<% end -%>
	  </li>
	<% end %>
</ul>

<br />

<%= link_to 'Добавить пользователя', new_admin_user_path if current_user.is_admin? %>
