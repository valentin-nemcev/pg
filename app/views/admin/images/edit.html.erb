<h1>Редактирование изображения</h1>

<% form_for [:admin, @image], :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </p>
	<p>
    <%= f.label :image_file %><br />
    <%= file_field :image, :image_file %>
  </p>
  <p>
    <%= f.submit "Сохранить" %>
  </p>
<% end %>

<%= link_to 'Назад', admin_images_path, :class => 'back'%>
