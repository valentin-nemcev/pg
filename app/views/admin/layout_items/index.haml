.list
  .new.item
    = render :partial => 'layout_item', :locals => {:item => @layout_item}
  
  - for item in @layout_items
    .item
      = render :partial => 'layout_item', :locals => {:item => item}
      = link_to 'Удалить', admin_layout_item_path(item), :class => 'control', :method => :delete    
      
      
%table
  - LayoutItem.grid('main').each do |row|
    %tr
      - row.each do |cell|
        - if cell.kind_of? LayoutItem
          %td(style="border: 1px solid #ccc; width: #{100/5*cell.width}%" rowspan="#{cell.height}" colspan="#{cell.width}")
            = cell.content.title unless cell.content.nil? 
        - else
          %td(style="border: 1px solid #ccc; width: #{100/5}%")
            empty